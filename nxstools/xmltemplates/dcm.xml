<?xml version='1.0'?>
<definition>
  <group type="NXentry" name="entry$var.serialno">
    <group type="NXinstrument" name="instrument">
      <group type="NXmonochromator" name="$(name)">
        <group type="NXcrystal" name="crystal1">
          <field type="NX_CHAR" name="usage">Bragg<strategy mode="INIT"/>
          </field>
          <field type="NX_CHAR" name="type">Si<strategy mode="INIT"/>
          </field>
          <field type="NX_INT" name="reflection">
            <strategy mode="INIT"/>$datasources.$(name)_reflection<dimensions rank="1"/>
          </field>
          <field type="NX_CHAR" name="depends_on">transformations/dcm_lat<strategy mode="INIT"/>
          </field>
          <group type="NXtransformations" name="transformations">
            <field depends_on="dcm_yaw" units="mm" type="NX_FLOAT64" name="dcm_lat">$datasources.$(lat)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">1 0 0<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
            <field depends_on="../../transformations/dcm_bragg" units="mm" type="NX_FLOAT64" name="dcm_yaw">$datasources.$(yaw)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">rotation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
            <field depends_on="dcm_pitch" units="deg" type="NX_FLOAT64" name="dcm_roll1">$datasources.$(roll1)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">rotation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">0 0 1<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
          </group>
          <field type="NX_CHAR" name="chemical_formula">Si<strategy mode="INIT"/></field>
        </group>
        <group type="NXcrystal" name="crystal2">
          <field type="NX_CHAR" name="usage">Bragg<strategy mode="INIT"/>
          </field>
          <field type="NX_CHAR" name="type">Si<strategy mode="INIT"/>
          </field>
          <field type="NX_INT" name="reflection">
            <strategy mode="INIT"/>
            <dimensions rank="1"/>$datasources.$(name)_reflection</field>
          <field type="NX_CHAR" name="depends_on">transformations/dcm_roll2<strategy mode="INIT"/>
          </field>
          <group type="NXtransformations" name="transformations">
            <field depends_on="dcm_pitch" units="deg" type="NX_FLOAT64" name="dcm_roll2">$datasources.$(roll2)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">rotation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">0 0 1<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
            <field depends_on="dcm_perp" units="deg" type="NX_FLOAT64" name="dcm_pitch">$datasources.$(pitch2)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">rotation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
            <field depends_on="dcm_para" units="mm" type="NX_FLOAT64" name="dcm_perp">$datasources.$(perp2)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
            <field depends_on="../../transformations/dcm_bragg" units="mm" type="NX_FLOAT64" name="dcm_para">$datasources.$(par2)<strategy mode="INIT"/>
              <attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
              </attribute>
              <attribute type="NX_FLOAT64" name="vector">0 0 1<dimensions rank="1">
                  <dim value="3" index="1"/>
                </dimensions>
                <strategy mode="INIT"/>
              </attribute>
            </field>
          </group>
          <field type="NX_CHAR" name="chemical_formula">Si</field>
        </group>
        <group type="NXtransformations" name="transformations">
          <field depends_on="dcm_jack1" units="deg" type="NX_FLOAT64" name="dcm_bragg">$datasources.$(braggangle)<strategy mode="INIT"/>
            <attribute type="NX_CHAR" name="transformation_type">rotation<strategy mode="INIT"/>
            </attribute>
            <attribute type="NX_FLOAT64" name="vector">-1 0 0<dimensions rank="1">
                <dim value="3" index="1"/>
              </dimensions>
              <strategy mode="INIT"/>
            </attribute>
          </field>
          <field units="mm" type="NX_FLOAT64" name="dcm_jack1">$datasources.$(jack1)<strategy mode="INIT"/>
            <attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
            </attribute>
            <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                <dim value="3" index="1"/>
              </dimensions>
              <strategy mode="INIT"/>
            </attribute>
          </field>
          <field units="mm" type="NX_FLOAT64" name="dcm_jack2">$datasources.$(jack2)<strategy mode="INIT"/>
            <attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
            </attribute>
            <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                <dim value="3" index="1"/>
              </dimensions>
              <strategy mode="INIT"/>
            </attribute>
          </field>
          <field units="mm" type="NX_FLOAT64" name="dcm_jack3">$datasources.$(jack3)<strategy mode="INIT"/>
            <attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
            </attribute>
            <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                <dim value="3" index="1"/>
              </dimensions>
              <strategy mode="INIT"/>
            </attribute>
          </field>
          <field units="mm" type="NX_FLOAT64" name="table">
            <strategy mode="INIT"/>$datasources.$(table)<attribute type="NX_CHAR" name="transformation_type">translation<strategy mode="INIT"/>
            </attribute>
            <attribute type="NX_FLOAT64" name="vector">0 1 0<dimensions rank="1">
                <dim value="3" index="1"/>
              </dimensions>
              <strategy mode="INIT"/>
            </attribute>
          </field>
        </group>
        <group type="NXcollection" name="collection">
          <field units="mm" type="NX_FLOAT" name="oxford_horizontal"><strategy mode="INIT"/>$datasources.$(oxfordhorizontal)</field>
          <field units="mm" type="NX_FLOAT64" name="exit_offset"><strategy mode="INIT"/>$datasources.$(exitoffset)</field>
          <field units="deg/mm" type="NX_FLOAT64" name="unit_calibration"><strategy mode="INIT"/>$datasources.$(unitcalibration)</field>
          <field type="NX_INT64" name="crystal"><strategy mode="INIT"/>$datasources.$(crystal)</field>
          <field depends_on="dcm_jack1" units="deg" type="NX_FLOAT64" name="theta">$datasources.$(theta)<strategy mode="INIT"/>
            <attribute type="NX_CHAR" name="transformation_type">rotation<strategy mode="INIT"/>
            </attribute>
            <attribute type="NX_FLOAT64" name="vector">-1 0 0<dimensions rank="1">
                <dim value="3" index="1"/>
              </dimensions>
              <strategy mode="INIT"/>
            </attribute>
          </field>
        </group>
        <field units="eV" type="NX_FLOAT64" name="energy"><strategy mode="INIT"/>$datasources.$(energy)</field>
      </group>
    </group>
  </group>
</definition>
